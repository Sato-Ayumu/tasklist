<%= form_with(model: task, local: true) do |f| %>

    <% if task.errors.any? %>
        <ul>
            <% task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
            
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status %>
                
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content %>
                    
    <%= f.submit '投稿' %>
    
<% end %>